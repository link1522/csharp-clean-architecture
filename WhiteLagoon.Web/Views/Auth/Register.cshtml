@model RegisterVM

<div class="w-100 card border-0 p-4">
    <div class="card-header border m-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Register</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form asp-controller="Auth" asp-action="Register" method="post" class="row">
            <div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Name" class="form-control" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Email" class="form-control" />
                    <label asp-for="Email" class="ms-2"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12 mb-3">
                    <input asp-for="Password" type="password" class="form-control" />
                    <label asp-for="Password" class="ms-2"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Register" class="btn btn-primary" />
                </div>
            </div>

        </form>
    </div>
</div>
