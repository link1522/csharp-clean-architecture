@model AmenityVM

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-danger bg-gradient m-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Amenity</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form asp-controller="Amenity" asp-action="Delete" method="post" class="row">
            <input asp-for="@Model.Amenity.Id" type="hidden" />

            <div class="p-3">
                @* <div asp-validation-summary="ModelOnly"></div> *@
                <div class="form-floating py-1 col-12">
                    <select asp-for="@Model.Amenity.VillaId" asp-items="@Model.VillaList as IEnumerable<SelectListItem>" disabled class="form-select border shadow">
                        <option selected disabled>-- select villa --</option>
                    </select>
                    <label asp-for="@Model.Amenity.VillaId" class="ms-2" ></label>
                    <span asp-validation-for="@Model.Amenity.VillaId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.Amenity.Name" disabled class="form-control" />
                    <label asp-for="@Model.Amenity.Name" class="ms-2" ></label>
                    <span asp-validation-for="@Model.Amenity.Name" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-check-circle"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Amenity" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel    
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        // await Html.RenderPartialAsync("_ValidationScriptsPartial")
        <partial name="_ValidationScriptsPartial" />
    };
}
