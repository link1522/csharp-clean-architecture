@model VillaNumber

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Villa Number</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form asp-controller="VillaNumber" asp-action="Create" method="post" class="row">
            <div class="p-3">
                @* <div asp-validation-summary="ModelOnly"></div> *@
                <div class="form-floating py-1 col-12">
                    <input asp-for="VillaId" class="form-control" />
                    <label asp-for="VillaId" class="ms-2" ></label>
                    <span asp-validation-for="VillaId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Villa_Number" class="form-control" />
                    <label asp-for="Villa_Number" class="ms-2" ></label>
                    <span asp-validation-for="Villa_Number" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="SpecialDetails" class="form-control" />
                    <label asp-for="SpecialDetails" class="ms-2" ></label>
                    <span asp-validation-for="SpecialDetails" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="VillaNumber" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel    
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        // await Html.RenderPartialAsync("_ValidationScriptsPartial")
        <partial name="_ValidationScriptsPartial" />
    };
}
