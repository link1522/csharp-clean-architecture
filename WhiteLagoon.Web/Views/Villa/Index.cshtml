@model IEnumerable<WhiteLagoon.Domain.Entities.Villa>

<h1 class="mb-3">Villa list</h1>

<div class="mb-3">
    <a asp-controller="Villa" asp-action="Create" class="btn btn-secondary">
        <i class="bi bi-plus-circle"></i>
        Create new villa
    </a>
</div>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Sqft</th>
            <th>Occupancy</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var villa in Model)
        {
            <tr>
                <td>@villa.Name</td>
                <td>@villa.Price</td>
                <td>@villa.Sqft</td>
                <td>@villa.Occupancy</td>
            </tr>
        }
    </tbody>
</table>
