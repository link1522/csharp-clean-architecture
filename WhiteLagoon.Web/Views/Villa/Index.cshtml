@model IEnumerable<Villa>

<h1 class="mb-3">Villa list</h1>

<div class="mb-3">
    <a asp-controller="Villa" asp-action="Create" class="btn btn-secondary">
        <i class="bi bi-plus-circle"></i>
        Create new villa
    </a>
</div>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Sqft</th>
            <th>Occupancy</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Villa in Model)
        {
            <tr>
                <td>@Villa.Name</td>
                <td>@Villa.Price</td>
                <td>@Villa.Sqft</td>
                <td>@Villa.Occupancy</td>
                <td>
                    <a asp-controller="Villa" asp-action="Update" asp-route-id="@Villa.Id" class="btn btn-primary">Edit</a>
                    <a asp-controller="Villa" asp-action="Delete" asp-route-id="@Villa.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
